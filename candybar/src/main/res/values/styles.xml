<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CandyBar.Text.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/text_content_subtitle</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="textAppearanceSubtitle2">@style/CandyBar.Text.Subtitle2</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
    </style>

    <style name="RippleStyle">
        <item name="colorControlHighlight">@color/rippleColor</item>
    </style>

    <style name="RippleStyleLight">
        <item name="colorControlHighlight">#44FFFFFF</item>
    </style>

    <style name="RippleAccentStyle">
        <item name="colorControlHighlight">@color/rippleAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="colorButtonNormal">?colorSecondary</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlActivated">?colorSecondary</item>
    </style>

    <style name="ToolbarThemeOverlay">
        <item name="colorControlNormal">@color/toolbarIcon</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/ToolbarThemeOverlay</item>
    </style>

    <style name="ActionBarOverlay">
        <item name="colorControlNormal">@color/toolbarIcon</item>
        <item name="android:textColorPrimary">@color/toolbarIcon</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
    </style>

</resources>