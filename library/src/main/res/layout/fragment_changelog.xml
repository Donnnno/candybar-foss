<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/changelog_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dialog_content_padding"
        android:paddingLeft="@dimen/dialog_content_padding"
        android:paddingStart="@dimen/dialog_content_padding"
        android:paddingRight="@dimen/dialog_content_padding"
        android:paddingEnd="@dimen/dialog_content_padding"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/text_content_header"
        app:fontFamily="@font/bold" />

    <TextView
        android:id="@+id/changelog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_content_padding"
        android:paddingStart="@dimen/dialog_content_padding"
        android:paddingRight="@dimen/dialog_content_padding"
        android:paddingEnd="@dimen/dialog_content_padding"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="@dimen/text_content_title"
        app:fontFamily="@font/regular" />

    <ListView
        android:id="@+id/changelog_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dialog_content_margin"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent" />

</LinearLayout>