<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardBackground"
        android:id="@+id/contributors">

        <TextView
            android:id="@+id/contributors_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin"
            android:drawablePadding="@dimen/content_margin"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:background="?attr/selectableItemBackground"
            android:theme="@style/RippleStyle"
            app:fontFamily="@font/medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_size"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardBackground"
        android:id="@+id/privacy_policy">

        <TextView
            android:id="@+id/privacy_policy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin"
            android:drawablePadding="@dimen/content_margin"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:background="?attr/selectableItemBackground"
            android:theme="@style/RippleStyle"
            app:fontFamily="@font/medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_size"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cardBackground"
        android:id="@+id/terms">

        <TextView
            android:id="@+id/terms_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_margin"
            android:drawablePadding="@dimen/content_margin"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_content_title"
            android:background="?attr/selectableItemBackground"
            android:theme="@style/RippleStyle"
            app:fontFamily="@font/medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_size"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

</LinearLayout>