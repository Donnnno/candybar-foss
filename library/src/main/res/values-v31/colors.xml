<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">@android:color/system_accent1_600</color>
    <color name="colorPrimaryDark">@android:color/system_accent1_600</color>
    <color name="colorAccent">@android:color/system_accent3_600</color>

    <color name="darkColorPrimary">@android:color/system_accent1_600</color>
    <color name="darkColorPrimaryDark">@android:color/system_accent1_600</color>
    <color name="darkColorAccent">@android:color/system_accent3_300</color>

    <!-- Shortcut Icons -->
    <color name="shortcutIconForeground">#FFF</color>
    <color name="shortcutIconBackground">#20AC6B</color>

    <!-- Navigation Bar
    * Must be solid color, no alpha -->
    <color name="navigationBar">#000000</color>
    <color name="navigationBarDark">#000000</color>

    <!-- Splash Screen -->
    <color name="splashColor">#FAFAFA</color>

    <!-- Navigation View -->
    <color name="navigationViewHeaderBackground">#00FFFFFF</color>
    <color name="navigationViewHeaderBackgroundDark">#00FFFFFF</color>
    <color name="navigationViewTitle">#FFFFFF</color>
    <color name="navigationViewTitleBack">#33000000</color>

    <color name="navigationViewText">#D9000000</color>
    <color name="navigationViewTextDark">#FFFFFF</color>
    <color name="navigationViewTextSelected">#20AC6B</color>
    <color name="navigationViewTextSelectedDark">#20AC6B</color>
    <color name="navigationViewSelectedBackground">#00000000</color>
    <color name="navigationViewSelectedBackgroundDark">#00000000</color>
    <color name="navigationViewRippleColor">#25000000</color>

    <!-- Swipe Refresh -->
    <color name="swipeRefresh">#20AC6B</color>

    <!-- Tap Intro -->
    <color name="tapIntroTitle">@color/mainBackground</color>
    <color name="tapIntroDescription">@color/mainBackground</color>
    <color name="tapIntroCircleInner">@color/primaryText</color>
    <color name="tapIntroCircleOuter">@color/secondaryText</color>

    <!-- Toolbar -->
    <color name="toolbarIcon">#FFFFFFFF</color>
    <color name="toolbarIconDark">#FFFFFFFF</color>

    <!-- Tab -->
    <color name="tabIndicator">#FFFFFFFF</color>
    <color name="tabIndicatorDark">#FFFFFFFF</color>
    <color name="tabText">#44FFFFFF</color>
    <color name="tabTextDark">#44FFFFFF</color>
    <color name="tabTextSelected">#FFFFFFFF</color>
    <color name="tabTextSelectedDark">#FFFFFFFF</color>

    <!-- Card -->
    <color name="cardBackground">@android:color/system_accent2_100</color>
    <color name="cardBackgroundDark">@android:color/system_accent2_800</color>
    <color name="cardStroke">@android:color/system_accent2_200</color>
    <color name="cardStrokeDark">@android:color/system_accent2_400</color>

    <!-- Ripple -->
    <color name="rippleColor">#4D000000</color>
    <color name="rippleColorDark">#4DFFFFFF</color>
    <color name="rippleAccent">#33FE9700</color>
    <color name="rippleAccentDark">#33FE9700</color>

    <!-- Attributes -->
    <color name="mainBackground">@android:color/system_neutral1_10</color>
    <color name="mainBackgroundDark">@android:color/system_neutral1_900</color>
    <color name="primaryText">#D9000000</color>
    <color name="primaryTextDark">#FFFFFF</color>
    <color name="secondaryText">#8C000000</color>
    <color name="secondaryTextDark">#B3FFFFFF</color>

    <color name="dividerList">#18000000</color>
    <color name="dividerListDark">#18FFFFFF</color>

    <!-- Wallpaper Preview -->
    <color name="wallpaperStatusBar">#99000000</color>
    <color name="wallpaperToolbar">#66000000</color>

</resources>
